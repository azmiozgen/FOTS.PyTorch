{
    "name": "FOTS",
    "cuda": true,
    "gpus": [0, 1],
    "data_loader": {
        "annotation_ext": "json",
        "batch_size": 64,
        "dataset": "price_tag",
        "data_dirname": "price_tag_small",
        "image_ext": "jpg",
        "input_size": 256,
        "random_blur_ksize_sigma": [5, 1.0],
        "random_crop_prob": 0.9,
        "random_hsv": [100, 100, 100],
        "random_rotation_angle": 10,
        "random_scale_factor": 0.05,
        "random_shear_factor": 0.2,
        "random_translate_factor": 0.05,
        "shuffle": true,
        "visualize_data": false,
        "workers": 8
    },
    "validation": {
        "validation_split": 0,
        "shuffle": true
    },
    "lr_scheduler_type": "ReduceLROnPlateau",
    "lr_scheduler": {
        "mode": "min",
        "factor": 0.5,
        "patience": 10,
        "threshold": 1e-4,
        "threshold_mode": "rel",
        "cooldown": 0,
        "min_lr": 1e-6,
        "eps": 1e-8,
        "verbose": true
    },
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 1e-4,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01,
        "amsgrad": false
    },
    "loss": "FOTSLoss",
    "metrics": ["fots_metric"],
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_freq": 1000,
        "verbosity": 2,
        "monitor": "val_char_similarity",
        "monitor_mode": "max"
    },
    "tester": {
        "batch_size": 128,
        "epoch_record": 100,
        "save_dir": "output/",
        "verbosity": 2
    },
    "arch" : "FOTSModel",
    "model" : {
        "mode": "united",
        "dice_smooth": 1.0,
        "dropout": 0,
        "recognizer_n_hidden": 128,
        "score_map_threshold": 0.5
    }
}
