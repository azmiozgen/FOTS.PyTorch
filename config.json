{
    "name": "FOTS",
    "cuda": true,
    "gpus": [0],
    "data_loader": {
        "dataset":"json",
        "data_dirname": "price_tag",
        "input_size": 512,
        "batch_size": 4,
        "shuffle": true,
        "workers": 4
    },
    "validation": {
        "validation_split": 0,
        "shuffle": true
    },
    "lr_scheduler_type": "",
    "lr_scheduler_freq": 10000,
    "lr_scheduler": {
            "gamma": 0.94
    },
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0001
    },
    "loss": "FOTSLoss",
    "metrics": ["fots_metric"],
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_freq": 50,
        "verbosity": 2,
        "monitor": "hmean",
        "monitor_mode": "max"
    },
    "arch": "FOTSModel",
    "model": {
        "mode": "united",
        "score_map_threshold" : 0.5
    }
}
