{
    "name": "FOTS",
    "cuda": true,
    "gpus": [0],
    "data_loader": {
        "annotation_ext": "json",
        "batch_size": 8,
        "dataset": "price_tag",
        "data_dirname": "price_tag",
        "image_ext": "jpg",
        "input_size": 256,
        "random_blur_ksize_sigma": [5, 1.0],
        "random_crop_prob": 0.9,
        "random_hsv": [100, 100, 100],
        "random_rotation_angle": 10,
        "random_scale_factor": 0.05,
        "random_shear_factor": 0.2,
        "random_translate_factor": 0.05,
        "shuffle": true,
        "visualize_data": false,
        "workers": 8
    },
    "validation": {
        "validation_split": 0,
        "shuffle": true
    },
    "lr_scheduler_type": "",
    "lr_scheduler_freq": 10000,
    "lr_scheduler": {
            "gamma": 0.94
    },
    "optimizer_type": "AdamW",
    "optimizer": {
        "lr": 0.0001,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01,
        "amsgrad": false
    },
    "loss": "FOTSLoss",
    "metrics": ["fots_metric"],
    "trainer": {
        "epochs": 1,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "tester": {
        "batch_size": 128,
        "save_dir": "output/",
        "verbosity": 2
    },
    "arch" : "FOTSModel",
    "model" : {
        "mode": "recognition",
        "dice_smooth": 1.0,
        "dropout": 0,
        "recognizer_n_hidden": 256,
        "score_map_threshold": 0.5
    }
}
